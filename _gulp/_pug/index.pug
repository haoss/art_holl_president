doctype

html(lang="ru")

  -var active = 'Главная' //активный пункт меню, список в header.jade
  -var pageTitle = 'Главная' + ' - Арт Холл Президент' //title страницы для генерации верстки

  include ./_include/_head

  body

    // Preloader
    include ./_include/_preloader

    include ./_include/_header

    main.main

      // Section 1
      section.section
        .section__top
          .one-carousel.carousel
            div
              .carousel__block
                img(src="./tmp/section-1-img.png", alt="")
            div
              .carousel__block
                img(src="./tmp/section-1-img.png", alt="")
            div
              .carousel__block
                img(src="./tmp/section-1-img.png", alt="")
            div
              .carousel__block
                img(src="./tmp/section-1-img.png", alt="")
        .section__bottom(data-text="АРТ ХОЛЛ")
          .section__bottom-content
            .hashtag
              span #АРТ ХОЛ ПРЕЗИДЕНТ
            .section__head
              h1 Потрясающее место для проведения выставок
            .section__content
              p Особое пространство в Москве, сочетающее в себе характерные черты лофта, арт-галереи и творческой мастерской. 
              
              .section-one__btns
                div
                  a(href="#!").btn
                    span Забронировать арт холл
                div.d-none.d-md-block.d-lg-none.d-xl-block
                  .section-one__small или 
                    br
                    | звоните
                div
                  a(href="tel:")
                    i.icon-call-border
                    span 0 800 
                      b 987 654 321

      // Section 2
      section.section
        .section__top
          p section 2
        .section__bottom(data-text="ТАРИФЫ")
          .section__bottom-content
            .hashtag
              span #АРТ ХОЛ ПРЕЗИДЕНТ
              span #ТАРИФЫ АРТ ХОЛ
            .section__head
              .h1 Индивидуальный подход к каждому клиенту
            .section__content
              p Цены на услуги за проведение выставочного проекта:
                br
                | 14 дней - 
                b 50 000 руб
                br
                | 30 дней - 
                b 90 000 руб

      // Section 3
      section.section
        .section__top
          p section 3
        .section__bottom(data-text="размещение" data-size="140")
          .section__bottom-content
            .hashtag
              span #АРТ ХОЛ ПРЕЗИДЕНТ
              span #экспозиции
            .section__head
              .h1 Индивидуальный выбор трансформации помещения

      // Section 4
      section.section
        .section__top
          p section 4
        .section__bottom(data-text="ПОМЕЩЕНИЕ" data-size="147")
          .section__bottom-content
            .hashtag
              span #АРТ ХОЛ ПРЕЗИДЕНТ
              span #экспозиции
            .section__head
              .h1 Уникальный формат возможностей помещения

      // Section 5
      section.section
        .section__top
          p section 5
        .section__bottom(data-text="ОСНАЩЕНИЕ" data-size="143")
          .section__bottom-content
            .hashtag
              span #АРТ ХОЛ ПРЕЗИДЕНТ
              span #экспозиции
            .section__head
              .h1 Уникальный формат оснащения помещения

      // Section 6
      section.section
        .section__top
          p section 6
        .section__bottom(data-text="бронирование" data-size="128")
          .section__bottom-content
            .hashtag
              span #АРТ ХОЛ ПРЕЗИДЕНТ
              span #экспозиции
            .section__head
              .h1 Индивидуальный подход к вашей трансформации мероприятия

      // Section 7
      section.section
        .section__top
          p section 7
        .section__bottom(data-text="НАВИГАЦИЯ" data-size="143")
          .section__bottom-content
            .hashtag
              span #АРТ ХОЛ ПРЕЗИДЕНТ
              span #экспозиции
            .section__head
              .h1 Наши контакты и схема проезда

    include ./_include/_footer
    div(style="height: 1000px; background-color: #fff")

    // Load Scripts
    include ./_include/_footer-js
    script(src="./js/common.js")

